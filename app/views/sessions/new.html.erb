<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">Sign in</div>
      <div class="panel-body">
        <%= form_for :session, url: sign_in_path do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.text_field :email, class: "form-control",placeholder: "E-mail", type: "email" %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.text_field :password, class: "form-control", placeholder: "Password",type: "password" %>
            </div>
            <div class="checkbox">
              <label>
                <input name="remember" type="checkbox" value="Remember Me"><%= t("text.remember")%>
              </label>
            </div>
            <%= f.submit t("button_labels.sign_in"), class: "btn btn-primary" %>
            </fieldset>
            <p> New user? <%= link_to t("button_labels.sign_up") , sign_up_path %> </p>
        <% end %>
      </div>
    </div>
  </div>
</div>

