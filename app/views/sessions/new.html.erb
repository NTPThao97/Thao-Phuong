<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading"><%= t("button_labels.sign_in")%></div>
      <div class="panel-body">
        <%= form_for :session, url: sign_in_path do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.label :email,  t("users.activerecord.attributes.email")%>
              <%= f.text_field :email, class: "form-control",placeholder: t("users.activerecord.attributes.email"), type: "email" %>
            </div>
            <div class="form-group">
              <%= f.label :password, t("users.activerecord.attributes.password") %>
              (<%= link_to t("text.forgot_pass"), new_password_reset_path%>)
              <%= f.text_field :password, class: "form-control", placeholder:  t("users.activerecord.attributes.password"),type: "password" %>
            </div>
            <div class="checkbox">
              <%= f.label :remember_me , class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span><%= t("text.remember")%></span>
              <% end %>
            </div>
            <%= f.submit t("button_labels.sign_in"), class: "btn btn-primary" %>
            </fieldset>
            <p> <%= t("text.new_user")%> <%= link_to t("button_labels.sign_up") , sign_up_path %> </p>
        <% end %>
      </div>
    </div>
  </div>
</div>

