<% @user ||= current_user %>
<div class="stats">
  <%= link_to "following", following_user_path(@user) , class: "btn btn-default" %>
  <strong id="following" class="stat">
    <%= @user.following.count %>
  </strong>
  <%= link_to "followers", followers_user_path(@user) , class: "btn btn-default" %>
  <strong id="followers" class="stat">
    <%= @user.followers.count %>
  </strong>
</div>
