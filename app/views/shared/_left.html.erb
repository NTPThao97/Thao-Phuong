<div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
  <div class="profile-sidebar">
    <% if current_user.avatar.attached? %>
      <div class="profile-userpic">
        <%= image_tag current_user.avatar  %>
      </div>
    <% else %>
      <div class="profile-userpic">
        <%= image_tag "" %>
      </div>
    <% end %>
    <%= hidden_field :id, current_user.id , id: "user_id" %>
    <div class="profile-usertitle-name"><%= current_user.name%></div>
    <div class="profile-usertitle-status"><span class="indicator label-success"></span>Online</div>
    <div class="clear"></div>
  </div>
  <div class="divider"></div>
  <%= form_tag(root_path, method: :get, id: "search-form", role: "search") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Users", class: "form-control" %>
  <% end %>
  <ul class="nav menu">
    <li class="active">
      <%= link_to  t("button_labels.home") , root_path %>
    </li>
    <li>
      <%= link_to  t("button_labels.profile") , user_path(current_user) %>
    </li>
    <li>
      <%= link_to t("button_labels.create_post "), new_post_path %>
    </li>
    <li>
      <%= link_to  t("button_labels.notify") , notifications_path %>
    </li>
    <li>
      <%= link_to "Activity Log", activity_logs_path %>
    </li>
    <li>
      <%= link_to t("button_labels.log_out"), log_out_path, method: :delete %>
    </li>
  </ul>
</div><!--/.sidebar-->
