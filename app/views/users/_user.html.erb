<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading"><%= header %></div>
      <div class="panel-body">
        <%= form_for @user do |f| %>
          <%= render "shared/error_messages" %>
          <fieldset>
            <div class="form-group">
              <%= f.label name %>
              <%= f.text_field :name, placeholder: _name,  class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label email %>
              <%= f.text_field :email, placeholder: _email ,class: "form-control",placeholder: "E-mail", type: "email" %>
            </div>
            <div class="form-group">
              <%= f.label password %>
              <%= f.text_field :password, placeholder: _password ,class: "form-control", placeholder: "Password",type: "password" %>
            </div>
            <div class="form-group">
              <%= f.label password_confirmation %>
              <%= f.text_field :password_confirmation, placeholder: _password_confirmation ,class: "form-control", placeholder: "Password", type: "password" %>
            </div>
            <div class="form-group">
              <%= f.label avatar %>
              <%= f.file_field :avatar %>
            </div>
            <%= f.submit t("button_labels.update"), class: "btn btn-primary" %>
            <p>
              <%= t("text.text2")%>
              <%= link_to t("button_labels.previous") , user_path(@user) %>
            </p>
            </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>


