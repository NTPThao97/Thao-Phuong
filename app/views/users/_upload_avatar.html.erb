<div class="modal fade" id="uploadAvatar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <%= form_for user do |f| %>
            <div class="form-group">
              <%= f.label :avatar, t("users.activerecord.attributes.avatar")%>
              <%= f.file_field :avatar %>
            </div>
          <%= f.submit t("button_labels.update"), class: "btn" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t("button_labels.close") %></button>
      </div>
    </div>
  </div>
</div>
