<%= render "shared/left"%>
<h1> <%= @user.name  %></h1>
<% if @user.avatar.attached? %>
  <li >
    <div class="profile-userpic">
      <%= image_tag @user.avatar  %>
    </div>
  </li>
<% else %>
  <li >
    <div class="profile-userpic">
      <%= image_tag "" %>
    </div>
  </li>
<% end %>
<li>
  <%= @user.email %>
</li>
<%= link_to t("button_labels.edit"), edit_user_path(@user) %>
