<%= render "shared/left" %>
<%= render "shared/show_noti" %>
<div class="panel panel-container">
  <div class="row">
    <div class="col-md-12">
      <h1>Notifications</h1>
      <%= paginate @notifications %>
      <% @notifications.each do |notification| %>
        <li class="list">
          <%= render notification %>
        </li>
        <%= link_to t("button_laybels.delete"), notification, method: :delete  %>
      <% end%>
      <%= paginate @notifications %>
      <li class="divider"></li>
    </div>
  </div>
</div>
