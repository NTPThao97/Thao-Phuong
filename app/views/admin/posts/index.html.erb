<div class="panel panel-container">
  <div class="row">
    <div class="col-md-12">
      <h2>Post Managerment</h2>
      <%= form_tag(admin_posts_path, method: :get, id: "search-form", role: "search") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Users", class: "form-control" %>
      <% end %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Account</th>
            <th>Title</th>
            <th>Content</th>
            <th>Type</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%= render @posts %>
        </tbody>
      </table>
    </div>
  </div>
</div>
