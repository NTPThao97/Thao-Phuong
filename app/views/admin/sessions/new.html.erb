<div class="row">
  <div class="col-xs-12 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">Sign in</div>
      <div class="panel-body">
        <%= form_for :session, url: admin_log_in_path do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.label t("users.activerecord.attributes.email") %>
              <%= f.text_field :email, class: "form-control",placeholder: "E-mail", type: "email" %>
            </div>
            <div class="form-group">
              <%= f.label t("users.activerecord.attributes.password") %>(<%= link_to "Forgot password", new_password_reset_path%>)
              <%= f.text_field :password, class: "form-control", placeholder: "Password",type: "password" %>
            </div>
            <div class="checkbox">
              <%= f.label  t("text.remember"), class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span><%= t("text.remember")%></span>
              <% end %>
            </div>
            <%= f.submit t("button_labels.sign_in"), class: "btn btn-primary" %>
            </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>

