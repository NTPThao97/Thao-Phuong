<!DOCTYPE html>
<html>
  <head>
    <title>SunBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/application', 'data-turbolinks-track': 'reload'%>
    <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
  </head>

  <body>
    <% if controller.controller_name == "sessions" %>
      <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-1 main">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
        <%= yield %>
      </div>
    <% else %>
      <%= render  "layouts/admin/header" %>
      <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
        <%= yield %>
        <%= render  "layouts/admin/footer" %>
      </div>
    <% end %>
  </body>
</html>
